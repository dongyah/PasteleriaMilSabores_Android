<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define el color de fondo del campo de texto (blanco) -->
    <solid android:color="@android:color/white"/>

    <!-- Define el borde del campo de texto -->
    <stroke
        android:width="1dp"
        android:color="#D1D5DB"/> <!-- Gris claro para el borde -->

    <!-- Define el radio de las esquinas (8dp) -->
    <corners android:radius="8dp"/>
</shape>
